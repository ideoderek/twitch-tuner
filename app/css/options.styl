@import "app"

$secondary_color = #256EFF
$secondary_shadow = #054EDF

body
	color #333333
	// These declarations are for browsers that do not support
	// options_ui, and therefore open the options page in a tab
	margin 0 auto
	max-width 385px
	background #777777
	box-shadow 0 0 4px 1px #444444

.area
	padding 20px 10px

	.section
		border-bottom-width 2px
		border-bottom-style solid
		margin-top 20px

	&.options
		background $primary_color

		.section
			border-bottom-color $primary_shadow

	&.about
		background $secondary_color

		.section
			border-bottom-color $secondary_shadow

h1,
h2,
h3
	margin 0
	font-family $heading_font

h1
	text-align center
	letter-spacing 4px
	text-transform uppercase
	color #FFFFFF
	font-size 22px
	font-weight normal

h2
	background #DDDDDD
	padding 5px 10px 7px 10px
	font-size 18px
	letter-spacing 1px
	word-spacing 2px
	color #000000
	font-weight normal

h3
	font-size 17px
	letter-spacing 1px
	color #000000

	& ~ h3
		margin-top 16px

p
	margin 0
	text-align justify

.content
	padding 12px
	background #FFFFFF
	font-size 16px
	line-height 1.4

.help
	margin 5px 24px 0 10px
	padding-left 14px
	border-left 1px solid #DDDDDD
	line-height 1.3
	font-size 15px

.input-container
	* ~ &
		margin-top 10px