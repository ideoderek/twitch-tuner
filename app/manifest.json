{
	"manifest_version": 2,

	"name": "Twitch Tuner",
	"author": "ideoderek",
	"description": "Notifies you when your favorite Twitch streamers are live.",
	"homepage_url": "https://github.com/ideoderek/twitch-tuner",

	"version": "0.1.0",
	"version_name": "November 8, 2016 (version 0.1.0)",

	"minimum_chrome_version": "29",

	"icons": {
		"48": "img/icon48.png",
		"128": "img/icon128.png"
	},

	"permissions": [
		"notifications",
		"https://api.twitch.tv/"
	],

	"background": {
		"persistent": true,
		"scripts": [
			"js/background.js"
		]
	},

	"browser_action": {
		"default_icon": {
			"19": "img/icon19.png",
			"38": "img/icon38.png"
		},
		"default_popup": "html/popup.html",
		"default_title": "Twitch Tuner"
	},

	"options_page": "html/options.html",

	"options_ui": {
		"page": "html/options.html",
		"chrome_style": false,
		"open_in_tab": false
	}
}
